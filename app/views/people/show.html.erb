<div class ="show">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @person.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @person.phone.insert(3, '-').insert(7, '-') %>
</p>

<p>
  <strong>Face:</strong>
  <br/>
  <%= image_tag @person.photo.url %>
</p>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
</div>