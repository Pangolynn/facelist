<hr>
<h1 id ="peopleh1">The Amazing People of RTO+P</h1>
<%= image_tag('rtop.png') %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <br/>
<hr>
  <tbody>
    <% @people.each do |person| %>

      <tr>

        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.phone.insert(3, '-').insert(7, '-') %></td>
        <td><%= image_tag person.photo.url(:thumb), :alt => '' %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>




    <% end %>

  </tbody>

</table>

<br>

<%= link_to 'New Person', new_person_path %>
